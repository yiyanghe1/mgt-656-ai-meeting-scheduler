[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .env,
    migrations,
    staticfiles,
    media
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
    settings.py:E501
